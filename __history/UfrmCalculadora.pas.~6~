  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls;

type
  TForm1 = class(TForm)
    edtN2: TEdit;
    edtN1: TEdit;
    edtResultado: TEdit;
    btnSubtrair: TButton;
    btnDividir: TButton;
    btnSomar: TButton;
    btnMultiplicar: TButton;
    procedure btnSomarClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

